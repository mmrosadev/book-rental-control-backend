{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/domain/*": [
        "./src/domain/*"
      ],
      "@/infra/*": [
        "./src/infra/*"
      ],
      "@/repository/*": [
        "./src/repository/*"
      ],
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}