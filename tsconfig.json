{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,            
    "strict": true,  
    "esModuleInterop": true,                      
    "skipLibCheck": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true                         
  },
  "baseUrl": "./src",
  "paths": {
    "@/*": ["./src/*"],
    "@/domain/*": ["./src/domain/*"],
    "@/infra/*": ["./src/infra/*"],
    "@/repository/*": ["./src/repository/*"],
    "@/http/*": ["./src/http/*"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
